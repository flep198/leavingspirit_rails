<p id="notice"><%= notice %></p>

<h1>Concerts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Fb link</th>
      <th>Coordinates</th>
      <th>Location name</th>
      <th>Ticket link</th>
      <th>Location link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.date %></td>
        <td><%= concert.time %></td>
        <td><%= concert.fb_link %></td>
        <td><%= concert.coordinates %></td>
        <td><%= concert.location_name %></td>
        <td><%= concert.ticket_link %></td>
        <td><%= concert.location_link %></td>
        <td><%= link_to 'Show', concert %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
        <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

